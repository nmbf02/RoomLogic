<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/etGuestId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID del Cliente"/>

    <EditText
        android:id="@+id/etRoomId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de la HabitaciÃ³n"/>

    <EditText
        android:id="@+id/etCheckInDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Check-in (YYYY-MM-DD)"/>

    <EditText
        android:id="@+id/etCheckOutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Check-out (YYYY-MM-DD)"/>

    <EditText
        android:id="@+id/etStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado (Pending, Confirmed, Canceled)"/>

    <Button
        android:id="@+id/btnSaveReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Reserva"
        android:backgroundTint="@color/purple_500"/>

    <Button
        android:id="@+id/btnCancelReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="@color/gray"/>
</LinearLayout>