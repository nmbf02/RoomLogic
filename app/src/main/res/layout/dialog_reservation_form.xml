<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <Spinner
        android:id="@+id/spinnerClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etCheckInDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Check-in (YYYY-MM-DD)"
        android:inputType="date"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/etCheckOutDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de Check-out (YYYY-MM-DD)"
        android:inputType="date"
        android:padding="10dp"/>

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Reserva"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btnCancelReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="@color/gray"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:padding="12dp"/>
</LinearLayout>
